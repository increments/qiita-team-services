<div class="form-group">
  <%= label :service, "properties_color", "#{service.class.human_attribute_name(:color)} *", class: "control-label" %>
  <%= select_tag "service[properties][color]", options_for_select(service.class::AVAILABLE_COLORS.map { |color| [color, color] }), class: "form-control" %>
  <% if service.errors.key?(:color) %>
    <br/>
    <div class="alert alert-warning">
      <% service.errors.full_messages_for(:color).each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
</div>

